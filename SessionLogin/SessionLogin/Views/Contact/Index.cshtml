
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <form method="post" action="/contact/receivecontact">
            <div class="form-group">
                <label for="txtName">Name</label>
                <input type="text" name="Name" class="form-control" id="txtName" placeholder="Enter with your name">
                @Html.ValidationMessage("Name")
            </div>
            <div class="form-group">
                <label for="txtEmail">E-mail</label>
                <input type="email" name="Email" class="form-control" id="txtEmail" placeholder="Enter with your Email">
                @Html.ValidationMessage("Email")
            </div>
            <div class="form-group">
                <label for="txtSubject">Subject</label>
                <input type="text" name="Subject" class="form-control" id="txtSubject" placeholder="Enter the Subject">
                @Html.ValidationMessage("Subject")
            </div>
            <div class="form-group">
                <label for="txtMsg">Message</label>
                <textarea type="text" name="Message" class="form-control" id="txtMsg" placeholder="Enter the message"></textarea>
                @Html.ValidationMessage("Message")
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>
</body>
</html>
